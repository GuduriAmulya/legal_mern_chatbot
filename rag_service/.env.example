# Copy this file to .env and fill in your actual values

# MongoDB connection string (get from MongoDB Atlas)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/legal_rag

# Groq API key (get from https://console.groq.com)
GROQ_API_KEY=gsk_your_api_key_here

# Path to PDF documents (relative or absolute)
RAG_DATA_FOLDER=./data

# Server configuration
PORT=8000

# Model configuration
MODEL_MAX_TOKENS=6000
RESERVED_RESPONSE_TOKENS=1000
RETRIEVE_K=5

# Optional: Enable turn-by-turn summarization (doubles API calls but saves tokens)
ENABLE_TURN_SUMMARIZATION=false
